<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <!-- Hidden li included to remove active class from about link when scrolled up past about section -->

                
                <li><%= link_to 'Strona główna', root_path %></li>            

        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

    <div class="container">
       <div class="col-md-12 offset-md-8">
            <div class="row">
 
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
            <br></br>
            <br></br>
             <div class="error_explanation">
                <div style="display: inline-block; text-align: left;">
                    <%= devise_error_messages! %>
                </div>
            </div>

            <div class="form-group">
                 <b><p>Rejestracja</b></p>

                <%= f.label :Imię, class: "col-sm-2 control-label" %>
                <div class="col-sm-6">
                    <%= f.text_field :name, class: "form-control", :required => true %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :Nazwisko, class: "col-sm-2 control-label" %>
                <div class="col-sm-6">
                    <%= f.text_field :surname, class: "form-control", :required => true %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :Email, class: "col-sm-2 control-label" %>
                <div class="col-sm-6">
                    <%= f.email_field :email, class: "form-control", :required => true %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :Hasło, class: "col-sm-2 control-label" %>
                <div class="col-sm-6">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => true %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label "Potwierdź hasło", class: "col-sm-2 control-label" %>
                <div class="col-sm-6">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :required => true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <%= f.submit "Zarejestruj się!", class: "btn btn-primary" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <%= render "patients/shared/links" %>
                </div>
                <br></br>
            </div>
        </div>
    </div>
  <% end %> 
 </div>

